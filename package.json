{
  "name": "truematch",
  "version": "1.0.0",
  "description": "TrueMatch - Trust-First Dating Platform",
  "private": true,
  "scripts": {
    "install:backend": "cd backend && npm ci",
    "build": "cd backend && npx prisma generate && npm run build",
    "start": "cd backend && npm run start:prod",
    "dev": "cd backend && npm run dev",
    "test": "cd backend && npm run test",
    "lint": "cd backend && npm run lint",
    "db:migrate": "cd backend && npx prisma migrate deploy",
    "db:seed": "cd backend && npm run db:seed",
    "postinstall": "cd backend && npm ci && npx prisma generate"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
