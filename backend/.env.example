# Database (Railway provides DATABASE_URL automatically when you add PostgreSQL)
DATABASE_URL="postgresql://user:password@host:5432/database"

# Redis (Railway provides REDIS_URL automatically when you add Redis)
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server (Railway sets PORT automatically)
PORT=3001
NODE_ENV=development

# Frontend URL for CORS (comma-separated for multiple origins)
FRONTEND_URL="http://localhost:3000"

# AI Service (optional - uses rule-based fallback if not set)
OPENAI_API_KEY=""

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# Railway-specific variables (auto-provided)
# ============================================
# RAILWAY_PUBLIC_DOMAIN - Your app's public domain
# RAILWAY_PRIVATE_DOMAIN - Internal domain for service communication
# RAILWAY_PROJECT_ID - Your project ID
# RAILWAY_ENVIRONMENT_NAME - Environment name (production, staging, etc.)
